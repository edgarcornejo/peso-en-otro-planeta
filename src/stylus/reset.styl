/* Estilos de Viewport */
@viewport {
  width: device-width;
}

/* Estilos de ScrollBar */
html { 
  scrollbar-color: #f2e7fe #1f1a24;
  scrollbar-width: thin;
}

/* Estilos de Selecci√≥n */
::selection {
  background-color: rgba(242, 231, 254, 0.4);
  border-radius: 5px;
}

/* View Transition */
@view-transition {
  navigation: auto;
}